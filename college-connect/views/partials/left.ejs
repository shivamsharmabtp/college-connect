<script>
    $('document').ready(() => {
        if(localStorage.getItem('reads')){
            $('.norecent').hide();
            reads = JSON.parse(localStorage.getItem('reads'))
            populateRecent(reads);
        }

        function populateRecent(data){
            for(i=data.length-1; i>=0 ; i--){
                shortName = data[i].name.split(' ').join('-').toLowerCase();
                a = '<a href="/read?doc=' + shortName + '&v=' + data[i].v + '&source=recent-reads" class="fileLinkR"><div class="fileR"><div class="top">'
                b = data[i].name + '</div></div></a>'
                $('.recents').append(a+b);
            }
        }
    })
</script>

